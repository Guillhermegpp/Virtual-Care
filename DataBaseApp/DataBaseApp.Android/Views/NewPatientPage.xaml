<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="DataBaseApp.Views.NewPatientPage"
		     Title="Novo Paciente">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="Save_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">

            <Label Text="Nome:" FontSize="Medium" />
            <Entry Text="{Binding Item.Nome}" FontSize="Small"/>
            <Label Text="Data de Nascimento:" FontSize="Medium" />
            <Entry Text="{Binding Item.dataNascimento}" FontSize="Small"/>
            <Label Text="Tipo Sanguineo:" FontSize="Medium" />
            <Entry Text="{Binding Item.tipoSangue}" FontSize="Small"/>
            <Label Text="Peso:" FontSize="Medium" />
            <Entry Text="{Binding Item.Peso}" FontSize="Small"/>
            <Label Text="Altura:" FontSize="Medium" />
            <Entry Text="{Binding Item.Altura}" FontSize="Small"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
