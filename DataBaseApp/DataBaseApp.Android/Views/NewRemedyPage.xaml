<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataBaseApp.Views.NewRemedyPage"
		     Title="Novo Paciente">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Adicionar" Clicked="Save_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">

            <Label Text="Remedio:" FontSize="Medium"/>
            <Entry Text="{Binding Item.RemedioNome}" FontSize="Small"  x:Name="nome"/>
            <Label Text="Intervalo:" FontSize="Medium" />
            <Entry Text="{Binding Item.HoraIntervalo}" FontSize="Small" x:Name="hora"/>
            <Label Text="Quantida de vezes:" FontSize="Medium" />
            <Entry Text="" FontSize="Small" x:Name="vezes" Keyboard="Telephone"/>
           </StackLayout>
    </ContentPage.Content>
</ContentPage>